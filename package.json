{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zendesk-search",
  "version": "0.1.0",
  "title": "Zendesk Search",
  "description": "Search for users, organizations, and triggers in Zendesk.",
  "icon": "icon.png",
  "author": "gemini",
  "license": "MIT",
  "commands": [
    {
      "name": "search-zendesk",
      "title": "Search Zendesk",
      "description": "Search for users and organizations in Zendesk.",
      "mode": "view",
      "entrypoint": "src/search-zendesk.tsx"
    },
    {
      "name": "open-zendesk-instance",
      "title": "Open Zendesk Instance",
      "description": "Open a Zendesk instance product.",
      "mode": "view",
      "entrypoint": "src/open-zendesk-instance.tsx"
    }
  ],
  "preferences": [
    {
      "name": "zendeskInstances",
      "title": "Zendesk Instances Configuration (JSON)",
      "description": "A JSON array of Zendesk instance configurations. See README.md for example.",
      "type": "password",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.101.1",
    "@raycast/utils": "^2.2.0",
    "react": "^19.0.0",
    "use-debounce": "^10.0.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "^19.0.0",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
